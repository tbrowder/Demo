#!/usr/bin/env raku

use Demo;

my $f1 = "resources/file1";
my $f2 = "resources/file2";
my $f3 = "t/01-basic.rakutest";
my $f4 = "lib/Demo.rakumod";
my $s;

my $nlines;
if not @*ARGS {
    print qq:to/HERE/;
    Usage: {$*PROGRAM.basename} <number of lines> | all

    Shows the contents of the distribution's files.   
    HERE
    exit;
}

my $arg = @*ARGS.shift;
$nlines = $arg ~~ /^\d+$/ ?? $arg !! 0;

for $f1, $f2, $f3, $f4 -> $f {
    say "Contents of '$f':";
    my $s = get-content $f, :$nlines;
    say "  $_" for $s.lines;
    say();
}

